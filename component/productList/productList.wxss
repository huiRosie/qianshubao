.productItem{
  width: 100%;
  height:200rpx;
  padding: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
}

.productTop{
  width: 100%;
  height: 32rpx;
  margin-bottom: 30rpx;
}

.productImg{
  display: block;
  width: 44rpx;
  height: 28rpx;
  float: left;
  margin-right: 16rpx;
}

.productTitle{
  width:630rpx;
  height: 28rpx;
  float: left;
  font-size: 28rpx;
  color: rgb(51, 52, 64);
  line-height: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.productMain{
  width: 100%;
  height: 80rpx;
}

.productMainLeft{
  width: 234rpx;
  height: 80rpx;
  float: left;
  border-right: 1px solid #f2f2f2;
}

.productRate{
  font-size: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: rgb(253, 84, 52);
  margin-bottom:8rpx;
}

.productReturn{
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  color: rgb(153, 153, 153);
}

.productMainRight{
  width:394rpx;
  height: 80rpx;
  float: left;
  padding-left: 60rpx;
}

.productAll{
  font-size: 28rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: rgb(51, 52, 64);
}

.productOther{
  font-size: 22rpx;
  height: 22rpx;
  color: rgb(153, 153, 153);
}

.productTime{
  float: left;
  width: 166rpx;
  border-right: 1px solid #f2f2f2;
}

.productRequire{
  float: left;
  width: 192rpx;
  padding-left: 8rpx;
}
