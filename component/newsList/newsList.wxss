.newsItem{
  width: 100%;
  height:160rpx;
  padding: 30rpx;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
}

.newsItemLeft{
  width:560rpx;
  height:100rpx;
  float: left;
  margin-right:30rpx;
}

.newsItemTitle{
  width:100%;
  height:60rpx;
  font-size: 28rpx;
  color: rgb(51, 52, 64);
  line-height:30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}

.newsItemDesc{
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
}

.newsItemFrom{
  float: left;
  width: auto;
  font-size: 24rpx;
  color: rgb(153,153,153);
  margin-right: 30rpx;
}

.newsItemClass{
  float: left;
  width: 60rpx;
  font-size: 24rpx;
  color: rgb(153,153,153);
  margin-right: 30rpx;
}

.newsItemRead{
  float: left;
  width: 150rpx;
  font-size: 24rpx;
  color: rgb(153,153,153);
  margin-right: 30rpx;
}

.newsItemTime{
  float: left;
  width: 150rpx;
  font-size: 24rpx;
  color: rgb(153,153,153);
}

.newsItemRight{
  width:100rpx;
  height:100rpx;
  float: left;
}

.newsItemImg{
  display: block;
  width:100rpx;
  height:100rpx;
}

