@import "../../component/newsList/newsList.wxss";
.container{
  background: #f2f2f2;
}

.section{
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  background:#f2f2f2;
  overflow: hidden;
  position: fixed;  
  z-index: 99;
  top: 0;
  left: 0;
}

.scroll-view_H{
  white-space:nowrap;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.scroll-view-item_H{
  display:inline;
  font-size: 30rpx;
  line-height: 60rpx;
  margin: 10rpx 30rpx;
}

.scroll-view-item_hover{
  color:#fd5434;
  height:58rpx;
  border-bottom: 2px solid #fd5434;
}

.newsMain{
  width: 100%;
  height:auto;
  padding-top: 80rpx;
  overflow: hidden;
  background: #f2f2f2;
  /* padding:0 30rpx;
   box-sizing: border-box;  */
}

.newsBottom{
  text-align: center;
  font-size: 24rpx;
  height:40rpx;
  line-height:40rpx;
  color: rgb(153,153,153);
}