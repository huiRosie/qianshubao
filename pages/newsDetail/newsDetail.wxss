@import '../../component/newsList/newsList.wxss';
@import '../../wxParse/wxParse.wxss'; 
.newsDetail{
  width: 100%;
  height: 100%;
  background: #f2f2f2;
}

.newsDetailTitle{
  width: 100%;
	height:auto;
	line-height:40rpx;
	font-size:32rpx;
	font-weight: 600;
  padding: 30rpx 30rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
}

.newsDetailMes{
  font-size: 24rpx;
  color: rgb(135, 135, 135);
  padding: 0 30rpx;
  background: #fff;
}

.newsDetailMes text{
  padding-right: 20rpx;
}

.viewDetailContent{
  width: 100%;
  height: auto;
  font-size: 28rpx;
  padding:20rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 20rpx;
}

.viewDetailContent image{
  display: block;
  width: 100%;
}

.newsDetailhotArticle{
  background: #fff;
}

.hotArticleTitle{
  width: 100%;
  height: 80rpx;
  padding:20rpx 30rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
}
